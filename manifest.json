{
    "manifest_version": 2,
    "name": "Liver Collection",
    "description": "肝脑涂地",
    "version": "1.0.0",
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "notifications",
        "webRequestBlocking",
        "alarms",
        "declarativeContent",
        "storage",
        "unlimitedStorage",
        "tabs",
        "background"
    ],
    "background": {
        "scripts": [
            "background/coopraid.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://game.granbluefantasy.jp/*"
            ],
            "css": [
                "contentScript/css/main.css"
            ],
            "js": [
                "contentScript/style.js",
                "contentScript/coopraid.js"
            ],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
        "default_icon": "assets/img/54878633_p0.png",
        "default_title": "寻找失去的肝脏",
        "default_popup": "index.html"
    }
}