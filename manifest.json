{
    "manifest_version": 2,
    "name": "Liver Collection",
    "description": "肝脑涂地",
    "version": "1.0.0",
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "notifications",
        "webRequest",
        "webRequestBlocking",
        "alarms",
        "activeTab",
        "declarativeContent",
        "storage",
        "unlimitedStorage",
        "http://localhost:8023/"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://game.granbluefantasy.jp/*",
                "*://gbf.game.mbga.jp/*"
            ],
            "run_at": "document_end",
            "js": [
                "main.js"
            ]
        }
    ],
    "background": {
        "page": "./index.html",
        "persistent": true
    },
    "browser_action": {
        "default_icon": "./assets/img/54878633_p0.png",
        "default_title": "寻找失去的肝脏",
        "default_popup": "./index.html"
    }
}